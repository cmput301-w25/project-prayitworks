<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#33000000"/> <!-- semi-transparent black -->
        </shape>
    </item>

    <!-- Main circular icon background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- white base for icon -->
        </shape>
    </item>
</layer-list>
