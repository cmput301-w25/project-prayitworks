<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:left="2dp" android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="#44000000" /> <!-- semi-transparent black -->
            <size android:width="56dp" android:height="56dp" />
        </shape>
    </item>

    <!-- Foreground Button Layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- your button color -->
            <stroke android:color="#222222" android:width="1dp"/>
            <size android:width="56dp" android:height="56dp" />
        </shape>
    </item>
</layer-list>
