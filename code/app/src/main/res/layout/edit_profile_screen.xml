<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top Bar with Back Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/light_green"
        android:orientation="horizontal"
        android:gravity="center_vertical"> <!-- Aligns children vertically -->

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Edit Profile"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </LinearLayout>


    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/profile_icon" />

    <!-- Add Photo Button -->
    <ImageView
        android:id="@+id/add_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/profile_image"
        android:layout_alignEnd="@id/profile_image"
        android:layout_marginTop="-20dp"
        android:src="@drawable/plus"
        android:contentDescription="Add Photo" />

    <!-- Buttons -->
    <Button
        android:id="@+id/change_name"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/add_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Change your name"
        android:textColor="@color/black"
        android:backgroundTint="@color/light_green"/>

    <Button
        android:id="@+id/change_username"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/change_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Change user name"
        android:textColor="@color/black"
        android:backgroundTint="@color/light_green"></Button>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_green"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home"
            android:contentDescription="Home" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search"
            android:contentDescription="Search" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/plus"
            android:contentDescription="Add" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/calendar"
            android:contentDescription="Calendar" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile_icon"
            android:contentDescription="Profile" />
    </LinearLayout>
</RelativeLayout>
