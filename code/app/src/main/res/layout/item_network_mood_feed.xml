<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_mood_request_item_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/filter_background">

    <!-- TOP ROW: Avatar, Name + Comment, Mood Emoji -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageUserAvatarItem"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_avatar_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textUserNameItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sonic the Hedgehog"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textMoodCommentItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feeling accomplished..."
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textMoodEmojiItem"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="ðŸ˜€"
            android:textSize="25sp" />
    </LinearLayout>

    <!-- BOTTOM ROW: Time, Like & Comment icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textMoodTimeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yesterday, 5:15 PM"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconLikeItem"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_thumbs_up" />

            <ImageView
                android:id="@+id/iconCommentItem"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_comment" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
