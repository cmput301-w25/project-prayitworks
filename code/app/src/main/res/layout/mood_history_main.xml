<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_app_gradient"
    android:padding="16dp">

    <!-- Header with Icon and Title -->
    <include
        android:id="@+id/header"
        layout="@layout/custom_header" />

    <!-- Calendar View -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="384dp"
        android:layout_height="232dp"
        android:layout_below="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:id="@+id/filter_row"
        android:layout_width="wrap_content"
        android:layout_height="237dp"
        android:layout_below="@id/calendarView"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <!-- Search Box takes 65% -->
        <EditText
            android:id="@+id/editSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:hint="Search..."
            android:textColor="@color/white"/>

        <!-- Small Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <!-- Spinner takes 30% -->
        <Spinner
            android:id="@+id/spinnerFilterType"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="30"
            android:entries="@array/filter_options" />
    </LinearLayout>

    <!-- "No results" text, placed below the search bar;
         shown/hidden from code as needed -->
    <TextView
        android:id="@+id/textEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="No results found"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:visibility="gone"
        tools:ignore="NotSibling" />

    <ListView
        android:id="@+id/mood_entries_scroll"
        android:layout_width="wrap_content"
        android:layout_height="173dp"
        android:layout_above="@id/bottom_nav"
        android:layout_below="@id/calendarView"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="41dp" />

    <!-- New Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bottom_nav_gradient"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <!-- Home Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_home"
                android:background="@drawable/nav_item_selector"
                android:padding="12dp"
                android:scaleType="centerInside" />
        </FrameLayout>

        <!-- Search Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_search"
                android:background="@drawable/nav_item_selector"
                android:padding="12dp"
                android:scaleType="centerInside" />
        </FrameLayout>

        <!-- Add Mood Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_add"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_add"
                android:background="@drawable/nav_item_selector"
                android:padding="12dp"
                android:scaleType="centerInside" />
        </FrameLayout>

        <!-- Calendar Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_calendar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_calendar"
                android:background="@drawable/nav_item_selector"
                android:padding="12dp"
                android:scaleType="centerInside" />
        </FrameLayout>

        <!-- Profile Button -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:background="@drawable/nav_item_selector"
                android:padding="12dp"
                android:scaleType="centerInside" />
        </FrameLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="4.671642" />

</RelativeLayout>