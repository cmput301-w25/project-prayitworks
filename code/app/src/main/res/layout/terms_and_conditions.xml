<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello! ðŸ‘‹"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tvSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Before you create an account, please read and accept our Terms &amp; Conditions"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="15dp"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textSize="26sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last updated: Feb 11, 2025"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tvTermsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terms_text"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:lineSpacingExtra="5dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnDecline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="Decline"
            android:textSize="15sp"
            android:textColor="#A0A0A0"
            android:backgroundTint="#7A52C0"
            android:layout_marginEnd="10dp"
            android:elevation="6dp" />

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:text="Accept"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:backgroundTint="@android:color/white"
            android:elevation="6dp" />
    </LinearLayout>

</LinearLayout>
